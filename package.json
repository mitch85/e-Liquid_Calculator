{
  "name": "lec",
  "productName": "LEC",
  "version": "1.0.0-beta",
  "main": "electron/main.js",
  "description": "Linux E-Liquid Calculator",
  "author": "Michael Marciniak <info@michael-marciniak.de>",
  "email": "info@michael-marciniak.de",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "ng:build": "ng build --configuration production --base-href ./",
    "electron:build": "npm run ng:build && electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@tailwindcss/postcss": "^4.1.1",
    "install": "^0.13.0",
    "npm": "^10.9.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular/cli": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.21",
    "electron": "^35.2.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.4.2"
  },
  "build": {
    "appId": "com.deinname.lec",
    "productName": "lec",
    "icon": "public/icon",
    "files": [
      {
        "from": "electron",
        "to": "electron"
      },
      {
        "from": "dist/e-liquid-calculator/browser",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}